{
    "editor.fontFamily": "MesloLGM NF,Consolas,Menlo",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modifications",
    "editor.formatOnPaste": true,
    "editor.minimap.enabled": false,

    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.disableExtension": false,
    "vim.highlightedyank.enable": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [ "j", "k" ],
            "after": [ "<Esc>" ]
        },
        {
            "before": [ "k", "j" ],
            "after": [ "<Esc>" ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ "leader", "<Enter>"],
            "commands": [":nohl"]
        },
        {
            "before": [ "leader", "w" ],
            "commands": [{ "command": ":wa" }]
        },
        {
            "before": [ "K" ],
            "after": [ "i", "<cr>", "<esc>" ]
        }
    ],
    "vim.leader": ",",
    "vim.handleKeys": {
        "<C-t>": false,
        "<C-q>": true,
        "<C-a>": false,
        "<C-c>": false,
        "<C-v>": false,
        "<C-x>": false
    },
    "terminal.integrated.fonteditor.fontFamily": "MesloLGM NF,Consolas,Menlo",
    "terminal.integrated.fonteditor.fontSize": 14,
    "terminal.integrated.shell.windows": "C:\\Users\\${env:USERNAME}\\scoop\\apps\\git\\current\\bin\\bash.exe",

    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "terminal.external.windowsExec": "",

    "files.associations": {
        "*jenkinsfile": "groovy"
    }
}
